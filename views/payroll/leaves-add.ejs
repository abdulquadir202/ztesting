<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.css" rel="stylesheet" />

    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <ul class="page-breadcrumb">
                    <li><span><a href="/dashboard">Home</a></span><i class="fa fa-circle"></i></li>
                    <li><span>Payrool</span><i class="fa fa-circle"></i></li>
                    <li><span><a href="/leaves">Leaves</a></span><i class="fa fa-circle"></i></li>
                    <li><span>Add</span></li>
                </ul>  
            </div>
            <h1 class="page-title"></h1> 
            <div class="row">
                <div class="col-md-12">
                    <div id="form-alerts"> </div>
                    <div class="portlet light portlet-fit portlet-form bordered">
                        <div class="portlet-title">
                            <div class="caption font-blue-hoki">
                                <i class="fa fa-calendar-o font-blue-hoki"></i>
                                <span class="caption-subject sbold uppercase"> Add Leave</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            
                        <form action="<%= api.url %>/api/attendance?token=<%= user.token %>" id="leaves_add_form" class="form-horizontal" enctype="multipart/form-data">
                            
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Employee
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-4">
                                            <select id="employeeId" class="form-control select2-multiple select2-hidden-accessible" name="employeeId">
                                            </select> 
                                        </div>
                                    </div>

                                    <div class="form-group">
                                    <label class="control-label col-md-3">Leave Type
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <select id="leaveTypeId" class="form-control select2-multiple select2-hidden-accessible" name="leaveTypeId"></select>
                                    </div>
                                    <div class="col-md-2">
                                        <span class="help-block"><a data-toggle="modal" href="#leaveTypeModal"><i class="icon-plus"></i> Add New</a></span>
                                    </div>
                                </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">From Date
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-4">
                                            <input type="text" value="" size="16" class="form-control form-control-inline date-picker" name="fromDate" id="fromDate" data-date-format="mm-dd-yyyy">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">To Date
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-4">
                                            <input type="text" value="" size="16" class="form-control form-control-inline date-picker" name="toDate" id="toDate" data-date-format="mm-dd-yyyy">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Description</label>
                                        <div class="col-md-4">
                                            <textarea rows="2" class="form-control" id="description" name="description"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button class="btn green" type="submit" id="addLeaves"> Submit </button>
                                            <button type="reset" class="btn default">Reset</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


<%- partial('partials/modal/addLeaveType') %>



<script type="text/javascript">
    $().ready(function() {
        var token = '<%= user.token %>';
        var sUrl = '<%= api.url %>';
        populateEmployees(buildUrl(sUrl,'employees', token, '<%= defaults.psize %>'),false);
        populateLeaveType(buildUrl(sUrl,'leaveTypes', token, '<%= defaults.psize %>'));
        populateSalaryComponent(buildUrl(sUrl,'salaryComponents', token, '<%= defaults.psize %>'),false);
        addLeave(buildUrl(sUrl,'leaveType', token, null),buildUrl(sUrl,'leaveTypes', token, '<%= defaults.psize %>'));
        
    });
</script>

