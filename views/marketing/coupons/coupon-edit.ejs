<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li><span><a href="/dashboard">Home</a></span><i class="fa fa-circle"></i></li>
                <li><span> Jobs</span><i class="fa fa-circle"></i></li>
                <li><span><a href="/coupons">Coupons</a></span><i class="fa fa-circle"></i></li>
                <li><span> Edit</span></li>
            </ul>
        </div>
        <h1 class="page-title"></h1>
        <div class="row">
            <div class="col-md-12">
                <div id="form-alerts"> </div>
                <div class="portlet light portlet-fit portlet-form bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-bullhorn font-blue-hoki"></i>
                            <span class="caption-subject font-blue-hoki sbold uppercase"> Edit Coupon</span> | <span class="lid"></span>
                        </div>
                    </div>
                    
                    <div class="portlet-body">
                        <form action="<%= api.url %>/api/coupon/<%= couponId %>?token=<%= user.token %>" id="coupons_add_form" class="form-horizontal">
                            <input type="hidden" id="couponId" value="<%= couponId %>">
                            <input type="hidden" id="apiUrl" value="<%= api.url %>"/>
                            <input type="hidden" id="token" value="<%= user.token %>"/>

                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Coupon
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="couponName" id="couponName">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Coupon Type
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control select2-multiple select2-hidden-accessible" name="couponType" id="couponType">
                                            <option value="Discount" selected="true">Discount</option>
                                            <option value="Cashback">Cashback</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Valid Till
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" value="" size="16" class="form-control form-control-inline date-picker" name="validTill" id="validTill" data-date-format="dd-mm-yyyy">
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="control-label col-md-3"> Minimum Order ( <i class="fa fa-inr"></i> )
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="minOrder" id="minOrder">
                                    </div>
                                </div>

                                 <div class="form-group">
                                    <label class="control-label col-md-3">Discount Type
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control select2-multiple select2-hidden-accessible" name="discountType" id="discountType">
                                            <option value="flat" selected="true">Flat</option>
                                            <option value="percentage">Percentage</option>
                                        </select>
                                    </div>
                                </div>

                                 <div class="form-group">
                                    <label class="control-label col-md-3">Amount/Percentage</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="amount" id="amount">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Terms & Condition</label>
                                    <div class="col-md-4">
                                        <textarea rows="4" class="form-control" id="terms" name="terms"></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Description</label>
                                    <div class="col-md-4">
                                        <textarea rows="4" class="form-control" id="description" name="description"></textarea>
                                    </div>
                                </div>

                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button class="btn green" type="submit" id="editCoupon"> Update </button>
                                        <button type="reset" class="btn default">Reset</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>