<link href="/al/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css" />
<link href="/al/css/bootstrap-modal.css" rel="stylesheet" type="text/css" />

<div id="activityTypeModal" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 class="modal-title">Add New Activity Type</h3>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <h4>Activity Type Information</h4>
                <p> Type Name<span style="color:red;"> * </span>
                    <input class="form-control" type="text" id="activityType" name="activityType" required="true"> 
                    <span class="help-block">Ex:Health awareness,Education</span>
                </p>
                <p> Description<textarea rows="4" class="form-control" id="activityTypeDescription" name="activityTypeDescription"></textarea> </p>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn green" id="addActivityType">Submit</button>
        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancel</button>
    </div>
</div>