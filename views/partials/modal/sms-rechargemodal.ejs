<link href="/al/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css" />
<link href="/al/css/bootstrap-modal.css" rel="stylesheet" type="text/css" />

<div id="rechargesms" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 class="modal-title">Recharge SMS</h3>
    </div>
    
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <form action="#">
                    <input type="hidden" id="amount">
                     <p><b>Available Wallet Balance: <span id="walleta"></b></span>
                    </p>
                    <p> Amount: <span id="charge"></span>
                    </p>
                     <p> GST : <span id="gst"></span>
                    </p>
                    <p> Total Payable : <span id="total"></span>
                    </p>
                </form>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancel</button>
        <button type="button" class="btn green" data-dismiss="modal" id="recharge">Pay Now</button>
    </div>
</div>