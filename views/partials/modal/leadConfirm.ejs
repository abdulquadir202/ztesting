<link href="/al/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css" />
<link href="/al/css/bootstrap-modal.css" rel="stylesheet" type="text/css" />

<div id="leadConfirmModal" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 class="modal-title">Confirm Lead</h3>
    </div>
    
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <form action="#">
                    <input type="hidden" id="mLeadId">
                    <p> Due Date
                       <input type="text" value="" size="16" class="form-control form-control-inline date-picker" name="mDueDate" id="mDueDate" data-date-format="dd-mm-yyyy">
                    </p>
                    <p> Assigned To
                        <select id="employeeId" class="form-control select2-multiple select2-hidden-accessible" name="employeeId">
                        </select>
                    </p>
                    <p> Price
                        <input type="text" class="form-control" id="mPrice" name="mPrice" required=""> 
                    </p>
                    
                    <div class="col-md-12" style="padding-left:0px;">
                        <div class="mt-checkbox-list">
                            <label class="mt-checkbox">
                                <input type="checkbox" id="sendSmS" class="mt-checkbox"> Send SMS to Customer
                                <span></span>
                            </label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancel</button>
        <button type="button" class="btn green" data-dismiss="modal" id="leadConfirm">Submit</button>
    </div>
</div>