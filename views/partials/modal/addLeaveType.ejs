<link href="/al/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css" />
<link href="/al/css/bootstrap-modal.css" rel="stylesheet" type="text/css" />

<div id="leaveTypeModal" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 class="modal-title">Add New Leave Type</h3>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <h4>Leave Type Information</h4>
                <p> Name<span style="color:red;"> * </span>
                    <input class="form-control" type="text" id="name" name="name" required="true"> 
                </p>
                <p> Max. Days Alloted<span style="color:red;"> * </span>
                    <input class="form-control" type="text" id="maxDaysAlloted" name="maxDaysAlloted" required="true"> 
                </p>
                <p> Max. Nagative Balance<span style="color:red;"> * </span>
                    <input class="form-control" type="number" id="maxNagativeBal" name="maxNagativeBal" required="true"> 
                </p>
                <p> Salary Component<span style="color:red;"> * </span>
                    <select id="salaryComponentId" class="form-control select2-multiple select2-hidden-accessible" name="salaryComponentId"> </select> 
                </p>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn green" id="addLeaveType">Submit</button>
        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancel</button>
    </div>
</div>

