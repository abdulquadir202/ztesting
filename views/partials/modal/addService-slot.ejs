<link href="/al/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css" />
<link href="/al/css/bootstrap-modal.css" rel="stylesheet" type="text/css" />

<div id="addSlotModal" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 class="modal-title">Add a service slot</h3>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <form action="#">
                    <h4>Service Information</h4>
                    <input type="hidden" id="serviceId" >
                    <p> From<span style="color:red;"> * </span>
                        <input type="text" class="form-control" id="fromTime" name="fromTime" required=""> </p>
                    <p> To<span style="color:red;"> * </span>
                        <input type="text" class="form-control" id="toTime" name="toTime" required=""> </p>
                    <p> Maximum Service<span style="color:red;"> * </span>
                        <div class="input-group">
                            <input type="text" class="form-control" id="maxSlot" name="maxSlot" required="">
                        </div>
                    </p>
                </form>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn green" data-dismiss="modal" id="addSlot">Submit</button>
        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancel</button>
    </div>
</div>
<script>
$(function () {
    $('#fromTime').timepicker({
      format: 'HH:mm',
      ampm: false,
      showSecond: false,
        showMeridian: false ,
      pick12HourFormat: false
      //'timeFormat':'H:i:s'
    });
    $('#toTime').timepicker({
      format: 'hh:mm',
      pickDate: false,
      showMeridian: false,
      pickSeconds: false,
      pick12HourFormat: false
    });
});

</script>
