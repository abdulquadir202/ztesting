<div id="sendSMSModal" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 class="modal-title">Send SMS</h3>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <form action="#">
                    <!--<h4>Message Details</h4>-->
                    <p> Mobile Numbers<span style="color:red;"> * </span>
                        <input class="form-control" type="text" id="mMobile" name="mMobile" required=""> </p>
                    <p> Message<span style="color:red;"> * </span>
                        <textarea rows="8" class="form-control" id="mMessage" name="mMessage" required=""></textarea>
                    </p>
                </form>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn green" data-dismiss="modal" id="sendSMS">Submit</button>
        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancel</button>
    </div>
</div>