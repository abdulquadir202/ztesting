<div id="addCustomerModal" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 class="modal-title">Add New Customer</h3>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <form action="#"> 
                <h4>Customer Information</h4>
                <p> Name<span style="color:red;"> * </span>
                    <input type="text" class="form-control" id="mCustomerName" name="mCustomerName" required="true"> </p>
                <p> Mobile No<!-- <span style="color:red;"> * </span> -->
                    <input type="mobile" class="form-control" id="mCustomerMobile" name="mCustomerMobile" required=""> </p>
                <p> Email<!-- <span style="color:red;"> * </span> -->
                    <input type="email" class="form-control" id="mCustomerEmail" name="mCustomerEmail" required=""> </p>
                <p> Address<!-- <span style="color:red;"> * </span> -->
                    <input type="text" class="form-control" id="mCustomerAddress" name="mCustomerAddress" required=""> </p>
                </form>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn green" data-dismiss="modal" id="addCustomer">Submit</button>
        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancel</button>
    </div>
</div>