<div id="addBankModal" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 class="modal-title">Add New Bank Account</h3>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <form action="#">
                <h4>Bank Information</h4>
                <p> Bank Name<span style="color:red;"> * </span>
                    <input class="form-control" type="text" id="mBankName" name="mBankName" required=""> </p>
                <p> Account Number<span style="color:red;"> * </span>
                    <input class="form-control" type="text" id="mBankAccountNo" name="mBankAccountNo" required=""> </p>
                </form>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn green" data-dismiss="modal" id="addBankInfo">Submit</button>
        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancel</button>
    </div>
</div>