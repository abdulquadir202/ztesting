<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li><span><a href="/dashboard">Home</a></span><i class="fa fa-circle"></i></li>
                <!-- <li><span>Blog</span><i class="fa fa-circle"></i></li> -->
                <li><span><a href="/items">Items</a></span><i class="fa fa-circle"></i></li>
                <li><span>Details</span></li>
            </ul>  
        </div>
        <h1 class="page-title"></h1>

        <div class="row">
            <div class="col-md-12" id="detail">
                <div id="form-alerts"> </div>
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-layers font-blue-hoki"></i>
                            <span class="caption-subject font-blue-hoki bold uppercase">Item Detail</span>
                        </div>
                        <div class="dt-buttons pull-right">
                            <a class="dt-button buttons-print btn green blue-hoki btn-outline" href="/items/<%= itemId %>/edit" id="showEdit"><span><i class="fa fa-edit"></i> Edit</span></a>
                            <a class="dt-button buttons-print btn green blue-hoki btn-outline" href="javascript:;" id="delete"><span><i class="fa fa-trash"></i> Delete</span></a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <input type="hidden" id="itemId" value="<%= itemId %>">
                        <input type="hidden" id="url" value="<%= api.url %>/api/item/<%= itemId %>?token=<%= user.token %>">

                        <form class="form-horizontal" role="form">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Name:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="displayName"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Category:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="displayCategory"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Type:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="displayType"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Unit:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="displayUnit"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Price:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="displayPrice"></p>
                                    </div>
                                </div>
                                <% if(user.profile.roles.indexOf('aggregator')>-1){ %>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Lead Price:</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static" id="displayleadPrice"></p>
                                        </div>
                                    </div>
                                <% } %>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Description:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="displayDescription"></p>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
