<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li><span><a href="/dashboard">Home</a></span><i class="fa fa-circle"></i></li>
                <li><span> Items</span><i class="fa fa-circle"></i></li>
                <li><span> Edit</span></li>
            </ul>
        </div>
        <h1 class="page-title"></h1>
        <div class="row">
            <div class="col-md-12">
                <div id="form-alerts"> </div>
                <div class="portlet light portlet-fit portlet-form bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-bullhorn font-blue-hoki"></i>
                            <span class="caption-subject font-blue-hoki sbold uppercase"> Edit Item</span> | <span class="lid"></span>
                        </div>
                    </div>
                    <div class="portlet-body">
                         <form action="<%= api.url %>/api/item/<%= itemId %>?token=<%= user.token %>" id="items_edit_form" class="form-horizontal">
                        <input type="hidden" id="itemId" value="<%= itemId %>">
                            
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Name</label>
                                    <div class="col-md-4">
                                        <input name="name" id="name" type="text" class="form-control" /> 
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Category
                                    </label>
                                    <div class="col-md-4">
                                        <select id="itemCategoryId" class="form-control select2-multiple select2-hidden-accessible" name="itemCategoryId"></select>
                                    </div>
                                    <div class="col-md-2">
                                        <span class="help-block"><a data-toggle="modal" href="#itemCategoryModal"><i class="icon-plus"></i> Add New</a></span>
                                    </div>
                                </div>

                                <div class="form-group" id="check">
                                    <label class="control-label col-md-3">
                                    </label>
                                    <div class="col-md-4">
                                        <div class="mt-checkbox-list">
                                            <label class="mt-checkbox">
                                                <input type="checkbox" id="addToTruneto" class="mt-checkbox"> List this service in Truneto.com marketplace
                                                <span></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group hidden" id="tser">
                                    <label class="control-label col-md-3">Truneto Service
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <select id="mpServiceId" class="form-control select2-multiple select2-hidden-accessible" name="mpServiceId"></select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Type
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control select2-multiple select2-hidden-accessible" name="itemType" id="itemType">
                                            <option value="product">Product</option>
                                            <option value="service">Service</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Price
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="price" name="price"> 
                                    </div>
                                </div>
                                <% if(user.profile.roles.indexOf('aggregator')>-1){ %>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Lead Price
                                        </label>
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" id="lprice" name="lprice"> 
                                        </div>
                                    </div>
                                <%}%>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Unit
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="itemUnit" name="itemUnit"> 
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Description</label>
                                    <div class="col-md-4">
                                        <textarea rows="2" class="form-control" id="description" name="description"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button class="btn green" type="submit" id="updateItem"> Save </button>
                                        <button type="button" class="btn default" id="cancelEdit">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- partial('partials/modal/addItemCategories') %>