<style type="text/css">
    .modal {
    margin-top: 0;
    outline: 0 none;
    overflow: visible;
    position: absolute;
    top: 30%;
    width: 620px;
    margin-left: -301px;
}
.modal.link-dialog.in{
    padding-left: 13px;
