<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.css" rel="stylesheet" />
<link href="/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css" />

    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <ul class="page-breadcrumb">
                    <li><span><a href="/dashboard">Home</a></span><i class="fa fa-circle"></i></li>
                    <li><span><a href="/wa/activities">Causes</a></span><i class="fa fa-circle"></i></li>
                    <li><span>Add</span></li>
                </ul>  
            </div>
            <h1 class="page-title"></h1> 
            <div class="row">
                <div class="col-md-12">
                    <div id="form-alerts"> </div>
                    <div class="portlet light portlet-fit portlet-form bordered">
                        <div class="portlet-title">
                            <div class="caption font-blue-hoki">
                                <i class="icon-puzzle font-blue-hoki"></i>
                                <span class="caption-subject sbold uppercase"> Add Causes</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            
                        <form action="<%= api.url %>/api/wa/activity?token=<%= user.token %>" id="activities_add_form" class="form-horizontal" enctype="multipart/form-data">
                            
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Causes Type
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-4">
                                            <select id="activityTypeId" class="form-control select2-multiple select2-hidden-accessible" name="activityTypeId"></select>
                                        </div>
                                        <div class="col-md-2">
                                            <span class="help-block"><a data-toggle="modal" href="#activityTypeModal"><i class="icon-plus"></i> Add New</a></span>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="control-label col-md-3">Name
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" name="activityName" id="activityName">
                                        </div>
                                    </div>

                                   <div class="form-group">
                                        <label class="control-label col-md-3">Cover Image
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-4">
                                            <input type="file" name="fileToUpload" id="fileToUpload">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Description</label>
                                        <div class="col-md-4">
                                            <textarea rows="4" class="form-control" id="activityDescription" name="activityDescription"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button class="btn green" type="submit" id="addActivity"> Submit </button>
                                            <button type="reset" class="btn default">Reset</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- partial('partials/waModal/addActivityTypes') %>

<script type="text/javascript">
    $().ready(function() {
        var token = '<%= user.token %>';
        var sUrl = '<%= api.url %>';
        populateActivityTypes(buildUrl(sUrl,'wa/activityTypes', token, '<%= defaults.psize %>'),false);
        addActivityTypes(buildUrl(sUrl,'wa/activityType', token, null),buildUrl(sUrl,'wa/activityTypes', token, '<%= defaults.psize %>'));
    });
</script>

<script src="/js/onground/wa/activities-add.js"></script>
