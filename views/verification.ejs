<% if (message.length > 0) { %>
    <div class="alert alert-danger">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button"><i class="fa fa-times"></i>
        </button>
        <%= message %>
    </div>
<% } %>
<form class="forget-form" action="/verify-otp" method="post">
    <h3 class="font-green">Enter OTP</h3>
    <!-- <p> Enter your mobile number below to reset your password. </p> -->
    <div class="form-group">
        <input class="form-control placeholder-no-fix" type="number" autocomplete="off" placeholder="OTP" name="otp" id="otp" /> 
        
     </div>
     <div class="form-group">
        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="new password" name="newPassword" id="newPassword"/> 
        
     </div>
     <div class="form-group">
        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="confirm password" name="cpassword"  id="cPassword"/>
     </div>
    <div class="form-actions">
    <input type="hidden" name="_csrf" value="<%= token %>">
        <a href="/login" class="btn btn-default">Back</a>
        <button type="submit" class="btn btn-success uppercase pull-right">Submit</button>
    </div>
</form>