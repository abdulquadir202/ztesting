<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li><span><a href="/dashboard">Home</a></span><i class="fa fa-circle"></i></li>
                <li><span>Orders</span><i class="fa fa-circle"></i></li>
                <li><span><a href="/orders">Orders</a></span><i class="fa fa-circle"></i></li>
                <li><span>Details</span></li>
            </ul>  
        </div>
        <h1 class="page-title"></h1>

        <div class="row">
            <div class="col-md-12" id="detail">
                <div id="form-alerts"> </div>
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-basket-loaded font-blue-hoki"></i>
                            <span class="caption-subject font-blue-hoki bold uppercase">Order Detail</span>
                            <!-- <span class="caption-helper">some info...</span> -->
                        </div>
                        <div class="dt-buttons pull-right">
                            <a class="dt-button buttons-print btn green blue-hoki btn-outline" href="/orders/<%= orderId %>/edit" ><span><i class="fa fa-edit"></i> Edit</span></a>
                            <a class="dt-button buttons-print btn green blue-hoki btn-outline" href="javascript:;" id="delete"><span><i class="fa fa-trash"></i> Delete</span></a>
                            <a class="dt-button buttons-csv buttons-html5 btn  dark btn-outline btn-invoice filter-btn" data-toggle="modal" href="#invoice"><span><i class="icon-info"></i> Invoice</span></a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <input type="hidden" id="orderId" value="<%= orderId %>">
                        <input type="hidden" id="url" value="<%= api.url %>/api/order/<%= orderId %>?token=<%= user.token %>">
                        <input id="cartItem" type="hidden" name="cartItem">
                        <div class="tab-content">
                            <div class="tab-pane active">
                                <div class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="portlet yellow-crusta box">
                                            <div class="portlet-title">
                                                <div class="caption">
                                                    <i class="fa fa-cogs"></i>Order Details </div>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Order #: </div>
                                                    <div class="col-md-7"> 
                                                        <span id="displayOrderNo"></span>
                                                    </div>
                                                </div>

                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Order Date & Time: </div>
                                                    <div class="col-md-7" id="displayDate"></div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Order Status: </div>
                                                    <div class="col-md-7">
                                                        <span class="label label-success" id="displayStatus"></span>
                                                    </div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Grand Total: </div>
                                                    <div class="col-md-7" id="displayGrossTotal"></div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Payment Information: </div>
                                                    <div class="col-md-7 value" id="paymentType"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-12">
                                        <div class="portlet blue-hoki box">
                                            <div class="portlet-title">
                                                <div class="caption">
                                                    <i class="fa fa-cogs"></i>Customer Information </div>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Customer Name: </div>
                                                    <div class="col-md-7" id="displayCustomer"> </div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Email: </div>
                                                    <div class="col-md-7" id="displayCustomerEmail"></div>
                                                </div>
                                                <div class="row static-info">
                                                    <div class="col-md-5 name"> Phone Number: </div>
                                                    <div class="col-md-7" id="displayCustomerMobile"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="portlet green-meadow box">
                                            <div class="portlet-title">
                                                <div class="caption">
                                                    <i class="fa fa-cogs"></i>Billing Address </div>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="row static-info">
                                                        <div class="col-md-12 value" id="billName"> </div>
                                                        <div class="col-md-12 value" id="billMobile"> </div>
                                                        <div class="col-md-12 value" id="billEmail"> </div>
                                                        <div class="col-md-12 value" id="billaddress"> </div>
                                                        <div class="col-md-12 value" id="billLandmark"> </div>
                                                        <div class="col-md-12 value" id="billCountry"> </div>
                                                        <div class="col-md-12 value" id="billPin"> </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="portlet red-sunglo box">
                                            <div class="portlet-title">
                                                <div class="caption">
                                                    <i class="fa fa-cogs"></i>Shipping Address </div>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="row static-info">
                                                        <div class="col-md-12 value" id="shipName"> </div>
                                                        <div class="col-md-12 value" id="shipMobile"> </div>
                                                        <div class="col-md-12 value" id="shipEmail"> </div>
                                                        <div class="col-md-12 value" id="shipaddress"> </div>
                                                        <div class="col-md-12 value" id="shipLandmark"> </div>
                                                        <div class="col-md-12 value" id="shipCountry"> </div>
                                                        <div class="col-md-12 value" id="shipPin"> </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <div class="portlet grey-cascade box">
                                            <div class="portlet-title">
                                                <div class="caption">
                                                    <i class="fa fa-cogs"></i>Shopping Cart </div>
                                            </div>
                                            <div class="portlet-body" id="cDiv">
                                                <div class="table-responsive">
                                                    <table class="table table-hover table-bordered table-striped">
                                                        <thead>
                                                            <tr>
                                                                <th> Product </th>
                                                                <th> Item Status </th>
                                                                <th> Original Price </th>
                                                                <th> Price </th>
                                                                <th> Quantity </th>
                                                                <th> Tax Amount </th>
                                                                <th> Tax Percent </th>
                                                                <th> Discount Amount </th>
                                                                <th> Total </th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id='cData'></tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6"> </div>
                                    <div class="col-md-6">
                                        <div class="well">
                                            <div class="row static-info align-reverse">
                                                <div class="col-md-8 name"> Sub Total: </div>
                                                <div class="col-md-3 value" id="netTotal"> </div>
                                            </div>
                                            <div class="row static-info align-reverse">
                                                <div class="col-md-8 name"> Shipping: </div>
                                                <div class="col-md-3 value" id="deliveryCharge"> </div>
                                            </div>
                                            <div class="row static-info align-reverse">
                                                <div class="col-md-8 name"> Grand Total: </div>
                                                <div class="col-md-3 value" id="grossTotal"> </div>
                                            </div>
                                            <div class="row static-info align-reverse">
                                                <div class="col-md-8 name"> Total Paid: </div>
                                                <div class="col-md-3 value" id="paid"></div>
                                            </div>
                                            <div class="row static-info align-reverse">
                                                <div class="col-md-8 name"> Total Due: </div>
                                                <div class="col-md-3 value" id="due"> </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- partial('partials/modal/addCustomer') %>
<%- partial('partials/modal/addItem') %>
<%- partial('partials/modal/invoice') %>