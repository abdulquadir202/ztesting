<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li><span><a href="/dashboard">Home</a></span><i class="fa fa-circle"></i></li>
                <li><span>Orders</span></li>
            </ul>
            <div class="page-toolbar">
                <div id="date-range" class="pull-right btn btn-sm">
                    <i class="icon-calendar"></i>&nbsp;
                    <span class="thin uppercase"></span>&nbsp;
                    <i class="fa fa-angle-down"></i>
                </div>
            </div>
        </div>
        <h1 class="page-title"></h1>
        <div class="row">
            <div class="col-md-12">
                <div id="form-alerts"> </div>
                <div class="portlet light bordered" id="orders_portlet">
                    <div class="portlet-title">
                        <div class="caption font-blue-hoki">
                            <i class="icon-basket-loaded font-blue-hoki"></i>
                            <span class="caption-subject bold uppercase"> Order List </span>
                        </div>

                        <div class="dt-buttons pull-right">
                            <a class="dt-button buttons-print btn green btn-outline" href="/orders/new"><span><i class="icon-plus"></i> Add Order</span></a>

                            <%- partial('partials/al/table-tools') %>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="dataTables_wrapper no-footer">
                            <div class="portlet box table-filters hide">
                                <form class="horizontal-form">
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-4 col-sm-6">
                                                <label class="control-label">Customer</label>
                                                <select id="customerId" class="form-control select2-multiple select2-hidden-accessible" name="customerId">
                                                </select>
                                            </div>
                                            <div class="col-md-5 col-sm-6 hide" id="bankOption">

                                            </div>

                                            <div class="col-md-3 col-sm-6 text-right pull-right">
                                                <label class="control-label">&nbsp;</label><br>
                                                <button id="filter-submit" class="btn green btn-outline">
                                                    <i class="fa fa-search"></i> Search
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="portlet-body" id="tDiv">
                                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="orders">
                                    <thead>
                                        <tr class="uppercase">
                                            <th class="table-checkbox">
                                                <input type="checkbox" class="group-checkable" data-set="#orders .checkboxes" /> </th>
                                            <th> Order No </th>
                                            <th> Date </th>
                                            <th> Customer </th>
                                            <th> Mobile </th>
                                            <th> Total </th>
                                            <!-- <th> Amount Paid </th> -->
                                            <!-- <th> Amount Due </th> -->
                                            <th> Status </th>
                                            <!-- <th> Address </th> -->
                                        </tr>
                                    </thead>
                                    <tbody id="tableData"></tbody>
                                </table>
                            </div>
                            <input type="hidden" id="apiUrl" value="<%= api.url %>"/>
                            <input type="hidden" id="token" value="<%= user.token %>"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

