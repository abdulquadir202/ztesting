<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.css" rel="stylesheet" />

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li><span><a href="/dashboard">Home</a></span><i class="fa fa-circle"></i></li>
                
                <li><span><a href="/testimonies">Testimonies </a></span><i class="fa fa-circle"></i></li>

                <li><span> Edit</span></li>
            </ul>
        </div>
        <h1 class="page-title"></h1> 
        <div class="row">
            <div class="col-md-12">
                <div id="form-alerts"> </div>
                <div class="portlet light portlet-fit portlet-form bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-bullhorn font-blue-hoki"></i>
                            <span class="caption-subject font-blue-hoki sbold uppercase"> Edit Testimony</span> | <span class="lid"></span>
                        </div>
                    </div>
                    
                    <div class="portlet-body">
                        <form action="<%= api.url %>/api/testimony/<%= testimonyId %>?token=<%= user.token %>" id="testimony_edit_form" class="form-horizontal">
                            <input type="hidden" id="testimonyId" value="<%= testimonyId %>">
                            <input type="hidden" id="apiUrl" value="<%= api.url %>"/>
                            <input type="hidden" id="token" value="<%= user.token %>"/>

                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Name:
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="name" id="name">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Service Name:
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="sName" id="sName" >
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Ratings:<span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" name="ratings" id="ratings">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3"> Status:
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control select2-multiple " name="status" id="status" data-required="1">
                                            <option value="active" selected="true">active</option>
                                            <option value="inactive">inactive</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Message</label>
                                    <div class="col-md-7">
                                        <textarea rows="4" class="form-control" id="message" name="message"></textarea>
                                    </div>
                                </div>

                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button class="btn green" type="submit" id="editTestimony"> Update </button>
                                        <button type="reset" class="btn default">Reset</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js"></script>
<script src="/js/onground/testimony/testimony-edit.js"></script>