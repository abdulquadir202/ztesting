
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li><span><a href="/dashboard">Home</a></span><i class="fa fa-circle"></i></li>
                <li><span>Wallet</span></li>
            </ul>
            <div class="page-toolbar">
                <div id="date-range" class="pull-right btn btn-sm">
                    <i class="icon-calendar"></i>&nbsp;
                    <span class="thin uppercase"></span>&nbsp;
                    <i class="fa fa-angle-down"></i>
                </div>
            </div>
        </div>
        <h1 class="page-title"></h1>
        <div class="row">
            <div class="col-md-12">
                <div id="form-alerts"> </div>
                <div class="portlet light bordered" id="wallets_portlet">
                    <div class="portlet-title">
                        <div class="row">
                            <div class="col-md-4 caption font-blue-hoki">
                                <i class="  fa fa-credit-card font-blue-hoki"></i>
                                <span class="caption-subject bold uppercase"> Available Wallet Balance:  <span id="wallet"></span> </span>
                            </div>
                            <div class="col-md-2">
                                <form class="search-form search-form-expanded" style="width:100%">
                                    <input type="text" name="amount" placeholder="Enter amount..." class="form-control" id="amount">
                                </form>
                            </div>
                            <div class="pull-left">
                                <a class="dt-button buttons-print btn green btn-outline" id="recharge" href="#"><span>Recharge</span></a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="dataTables_wrapper no-footer">
                            <div class="portlet-body" id="tDiv">
                                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="wallets_list">
                                    <thead>
                                        <tr class="uppercase">
                                            <th style="max-width: 100%;padding-left: 5;padding-right: 5; width: 102px;"> Date </th>
                                            <th class="text-center"> Deposit </th>
                                            <th class="text-center"> withdrawl </th>
                                            <th class="text-center"> Opening Balance </th>
                                            <th class="text-center"> Closing Balance </th>
                                            <th> Remarks </th>
                                        </tr>
                                    </thead>
                                    <tbody id="tableData"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="uname" value="<%= user.uname %>"/>

<input type="hidden" id="apiUrl" value="<%= api.url %>"/>
<input type="hidden" id="token" value="<%= user.token %>"/>