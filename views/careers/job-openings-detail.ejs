<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li><span><a href="/dashboard">Home</a></span><i class="fa fa-circle"></i></li>
                <li><span><a href="/careers/jobs-list">Job Openings </a></span><!-- <i class="fa fa-circle"></i> --></li>
                <!-- <li><span><%= jobId %></span></li>  -->
            </ul>  
        </div>
        <h1 class="page-title"></h1> 

        <div class="row">
            <div class="col-md-12 hidden" id="edit">
                <div id="form-alerts"> </div>
                <div class="portlet light portlet-fit portlet-form bordered">
                    <div class="portlet-title">
                        <div class="caption font-blue-hoki">
                            <i class="icon-bag font-blue-hoki"></i>
                            <span class="caption-subject sbold uppercase"> Job Information</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12" id="detail">
                <div id="form-alerts"> </div>
                <div class="portlet light bordered"> 
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-bag font-blue-hoki"></i>
                            <span class="caption-subject font-blue-hoki bold uppercase">Job Detail</span>
                            <!-- <span class="caption-helper">some info...</span> -->
                        </div> 
                        <div class="dt-buttons pull-right">
                            <a class="dt-button buttons-print btn green blue-hoki btn-outline" href="/careers/job-openings/<%= jobId %>/edit"><span><i class="fa fa-edit"></i> Edit</span></a>
                          <!--  <a id="pVar" class="dt-button buttons-print btn green blue-hoki btn-outline" href="/careers/<%= jobId %>/variation"><span><i class="fa fa-plus"></i> Variations</span></a> 
                            <a id="piu" class="dt-button buttons-print btn green btn-outline" href="#"><span><i class="icon-plus"></i> Add Photos</span></a> -->
                            <a class="dt-button buttons-print btn green blue-hoki btn-outline" href="javascript:;" id="delete"><span><i class="fa fa-trash"></i> Delete</span></a>
                        </div>
                    </div>

                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <input type="hidden" id="jobId" value="<%= jobId %>">
                        <input type="hidden" id="url" value="<%= api.url %>/api/jobopening/<%= jobId %>?token=<%= user.token %>">

                        <form class="form-horizontal" role="form">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Job Title:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="jobTitle"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Company Name:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="company"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Number of Openings:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="noOpening"> </p> Posting
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3"> Experience:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="experience"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Posted Date:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="postedDate"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Job Expiry Date:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="expireDate"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Location:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="location"></p>
                                    </div>
                                </div>
                                
                               
                                <div class="form-group">
                                    <label class="control-label col-md-3">Qualification:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="qualification"></p>
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Job Type:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="jobType"></p>
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Shift Type:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="shiftType"></p>
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Salary: </label>
                                    <div class="col-md-9"> ( <i class="fa fa-inr"></i> )
                                        <p class="form-control-static" id="salary"></p>
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Skill Level:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="skill"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Description:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="description"></p>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $().ready(function() {
        var token = '<%= user.token %>';
        var sUrl = '<%= api.url %>';
    });
</script>

