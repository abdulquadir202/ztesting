<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li><span><a href="/dashboard">Home</a></span><i class="fa fa-circle"></i></li>
                <li><span><a href="/applicant-list">Applicants List</a></span><i class="fa fa-circle"></i></li>
            </ul>  
        </div>
        <h1 class="page-title"></h1> 

        <div class="row">
            <div class="col-md-12 hidden" id="edit">
                <div id="form-alerts"> </div>
                <div class="portlet light portlet-fit portlet-form bordered">
                    <div class="portlet-title">
                        <div class="caption font-blue-hoki">
                            <i class="icon-bag font-blue-hoki"></i>
                            <span class="caption-subject sbold uppercase"> Applicant Information</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12" id="detail">
                <div id="form-alerts"> </div>
                <div class="portlet light bordered"> 
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-bag font-blue-hoki"></i>
                            <span class="caption-subject font-blue-hoki bold uppercase">Applicant Details</span>
                            <!-- <span class="caption-helper">some info...</span> -->
                        </div> 
                        <div class="dt-buttons pull-right">
                            
                            <a class="dt-button buttons-print btn green blue-hoki btn-outline" href="javascript:;" id="delete"><span><i class="fa fa-trash"></i> Delete</span></a>
                        </div>
                    </div>

                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <input type="hidden" id="applicantId" value="<%= applicantId %>">
                        <input type="hidden" id="url" value="<%= api.url %>/api/applicant/<%= applicantId %>?token=<%= user.token %>">
                        <form class="form-horizontal" role="form">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Name:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="name"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Mobile Number:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="mobile"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Job Applied For:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="jobTitle"> </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">E - mail:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="email"> </p>
                                    </div>
                                </div>

                                
                                <div class="form-group">
                                    <label class="control-label col-md-3">Message:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="message"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Submison Date:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static" id="createdOn"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Resume:</label>
                                    <div class="col-md-9">
                                        <a  class="dt-button buttons-print btn green blue-hoki btn-outline"  id="resume" target="_blank" title="Applicant Resume"  ><i class="fa fa-edit"></i> Download</a>
                                    </div>
                                </div>
                                
                               
                                

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


